_shtab_constantipy_commands() {
  local _commands=(
    "refactor:"
    "report:"
    "validate:"
  )
  _describe 'constantipy commands' _commands
}

_shtab_constantipy_options=(
  "(- : *)"{-h,--help}"[show this help message and exit]"
  "--path[Path to scan\/refactor (default\: current directory)]:path:"
  "--constants-file[Name of the file to store global constants]:constants_file:"
  "--min-length[Minimum length for string literals (default\: 4)]:min_length:"
  "--min-count[Minimum occurrences to be considered (default\: 2)]:min_count:"
  "--no-local-scope[Force all constants to be global]"
  "--report-file[File used for validate\/report]:report_file:"
  "*--ignore-call[Ignore arguments inside specific calls]:ignore_call:"
  "*--exclude[Exclude directories]:exclude:"
  "*--ignore-num[Ignore specific numbers]:ignore_num:"
  "*--include-num[Include specific numbers (un-ignore)]:include_num:"
  "*--ignore-str[Ignore specific strings]:ignore_str:"
  "--no-numbers[Do not scan numbers]"
  "--no-ints[Do not scan integers]"
  "--no-floats[Do not scan floats]"
  "--no-bytes[Do not scan bytes]"
  "--naming[Naming strategy]:naming:(derived generic)"
  "--extra-constants[]:extra_constants:"
  "--apply[Apply changes (files are modified)]"
)

