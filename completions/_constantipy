_shtab_constantipy_validate_defaults_added=0


_shtab_constantipy() {
  local context state line curcontext="$curcontext" one_or_more='(*)' remainder='(-)*' default='*::: :->constantipy'

  # Add default positional/remainder specs only if none exist, and only once per session
  if (( ! _shtab_constantipy_defaults_added )); then
    if (( ${_shtab_constantipy_options[(I)${(q)one_or_more}*]} +          ${_shtab_constantipy_options[(I)${(q)remainder}*]} +          ${_shtab_constantipy_options[(I)${(q)default}]} == 0 )); then
      _shtab_constantipy_options+=(': :_shtab_constantipy_commands' '*::: :->constantipy')
    fi
    _shtab_constantipy_defaults_added=1
  fi
  _arguments -C -s $_shtab_constantipy_options

  case $state in
    constantipy)
      words=($line[1] "${words[@]}")
      (( CURRENT += 1 ))
      curcontext="${curcontext%:*:*}:_shtab_constantipy-$line[1]:"
      case $line[1] in
        refactor) _arguments -C -s $_shtab_constantipy_refactor_options ;;
        report) _arguments -C -s $_shtab_constantipy_report_options ;;
        validate) _arguments -C -s $_shtab_constantipy_validate_options ;;
      esac
  esac
}



